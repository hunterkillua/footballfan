<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >
    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toLeftOf="@+id/c_l"
        android:gravity="center"
        android:text="资讯"
        android:padding="8dp"
        android:background="@drawable/tab_selector1"
        style="@style/text_tab_top"
        />

    <TextView
            android:id="@+id/c_l"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/center"
            android:gravity="center"
            android:text="国家大事"
            android:padding="8dp"
            android:background="@drawable/tab_selector2"
            style="@style/text_tab_top"
            />

    <TextView
            android:id="@+id/center"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="资讯"
            android:padding="8dp"
            android:background="@drawable/tab_selector1"
            style="@style/text_tab_top"
            />

    <TextView
            android:id="@+id/c_r"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/center"
            android:gravity="center"
            android:text="国家大事"
            android:padding="8dp"
            android:background="@drawable/tab_selector2"
            style="@style/text_tab_top"
            />


    <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/c_r"
            android:gravity="center"
            android:text="资讯"
            android:padding="8dp"
            android:background="@drawable/tab_selector1"
            style="@style/text_tab_top"
            />



</RelativeLayout>