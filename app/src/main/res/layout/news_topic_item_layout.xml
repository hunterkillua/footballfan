<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

        >

        <RelativeLayout
                android:id="@+id/content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/news_topic_item_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                        android:id="@+id/left"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        >
                        <com.zqf.footballfan.android.widget.CircleImageView
                                android:id="@+id/image"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/icon_logo"
                                app:civ_border_width="2dp"
                                app:civ_border_color="@color/theme_color_main"
                                />

                        <TextView
                                android:id="@+id/author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="text"
                                android:singleLine="true"
                                android:ellipsize="end"
                                style="@style/text_author"/>

                        <TextView
                                android:id="@+id/identity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="text"
                                android:singleLine="true"
                                android:ellipsize="end"
                                style="@style/text_identity"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/left"
                        android:orientation="vertical">

                        <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/left"
                                android:singleLine="true"
                                android:ellipsize="end"
                                style="@style/text_title"/>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@color/theme_color_main"/>

                        <TextView
                                android:id="@+id/desc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:layout_margin="4dp"
                                style="@style/text_desc"/>

                </LinearLayout>

        </RelativeLayout>

</LinearLayout>