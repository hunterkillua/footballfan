<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:baselineAligned="false"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:paddingBottom="8dp"
              android:layout_height="150dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@color/theme_color_main"
            android:padding="1dp"
            android:layout_weight="2">
        <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>
        <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginTop="1dp"
                android:layout_weight="1"/>
        <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginTop="1dp"
                android:layout_weight="1"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            >

        <com.zqf.footballfan.android.widget.AutoPlayViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <com.zqf.footballfan.android.widget.CirclePageIndicator
                android:id="@+id/cindicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="5dp"
                android:visibility="visible"
                app:fillColor="#00bb00"
                app:pageColor="#DADADA"
                app:radius="4dp"
                app:strokeWidth="0dp"
                />

    </FrameLayout>



</LinearLayout>