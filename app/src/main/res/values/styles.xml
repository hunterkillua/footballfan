<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light">

    </style>

    <style name="dialogNoTitleDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="dialogFullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!-- 文字标题 -->
    <style name="text_title">
        <item name="android:textColor">@color/theme_color_title</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 文字描述 -->
    <style name="text_desc">
        <item name="android:textColor">@color/theme_color_desc</item>
        <item name="android:textSize">@dimen/text_desc</item>
    </style>

    <!-- 文字正文 -->
    <style name="text_content">
        <item name="android:textColor">@color/theme_color_content</item>
        <item name="android:textSize">@dimen/text_cotent</item>
    </style>

    <!-- 文字作者 -->
    <style name="text_author">
        <item name="android:textColor">@color/theme_color_author</item>
        <item name="android:textSize">@dimen/text_author</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 文字身份 -->
    <style name="text_identity">
        <item name="android:textColor">@color/theme_color_identity</item>
        <item name="android:textSize">@dimen/text_identity</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 文字通用 -->
    <style name="text_normal">
        <item name="android:textColor">@color/theme_color_content</item>
        <item name="android:textSize">@dimen/text_cotent</item>
    </style>


    <!-- 文字底部 -->
    <style name="text_tab_bottom">
        <item name="android:textColor">@color/theme_color_title</item>
        <item name="android:textSize">@dimen/text_tab_title_s</item>
    </style>

    <!-- 文字底部 -->
    <style name="text_tab_top">
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:textSize">@dimen/text_tab_title_l</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 文字topbar -->
    <style name="text_topbar">
        <item name="android:textColor">@color/theme_color_title</item>
        <item name="android:textSize">@dimen/text_topbar_title</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
